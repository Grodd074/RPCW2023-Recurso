extends layout

block content
    w3-card-4
        .header.w3-container.w3-teal
            h1 Reparação #{repair._id}

        .w3-container
            li #[b Nome:] #{repair.nome}
            li #[b NIF:] #{repair.nif}
            li #[b Data:] #{repair.data}
            li #[b Marca Viatura] #{repair.viatura.marca}
            li #[b Modelo Viatura] #{repair.viatura.modelo}
            li #[b Matricula Viatura] #{repair.viatura.matricula}
            li #[b Número de Intervenções] #{repair.nr_intervencoes}
            li #[b Intervenções:] 
            each interv in repair.intervencoes
                li
                li #[b Código] #{interv.codigo}
                li #[b Nome] #{interv.nome}
                li #[b Descrição] #{interv.descricao}
    
        .footer.w3-container.w3-teal
            h5 Voltar ao #[a(href="/") inicio]